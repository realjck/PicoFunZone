pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
-- pong remake
-- by openai

-- initialize variables
local paddlewidth = 8
local paddleheight = 32
local ballsize = 4
local paddlespeed = 2
local ballspeed = 1.5
local ballx = 64
local bally = 64
local balldx = ballspeed
local balldy = ballspeed
local paddle1y = 64 - paddleheight / 2
local paddle2y = 64 - paddleheight / 2
local player1score = 0
local player2score = 0

-- main function
function _update()
  -- move the paddles
  if btn(0) then
    paddle1y = paddle1y - paddlespeed
  elseif btn(1) then
    paddle1y = paddle1y + paddlespeed
  end

  if btn(2) then
    paddle2y = paddle2y - paddlespeed
  elseif btn(3) then
    paddle2y = paddle2y + paddlespeed
  end

  -- update the ball position
  ballx = ballx + balldx
  bally = bally + balldy

  -- ball collision with paddles
  if ballx <= paddlewidth and bally + ballsize >= paddle1y and bally <= paddle1y + paddleheight then
    balldx = ballspeed
  elseif ballx + ballsize >= 128 - paddlewidth and bally + ballsize >= paddle2y and bally <= paddle2y + paddleheight then
    balldx = -ballspeed
  end

  -- ball collision with walls
  if bally <= 0 or bally + ballsize >= 128 then
    balldy = -balldy
  end

  -- ball scoring
  if ballx < 0 then
    player2score = player2score + 1
    resetball()
  elseif ballx + ballsize > 128 then
    player1score = player1score + 1
    resetball()
  end

  -- clamp paddle positions
  paddle1y = mid(0, paddle1y, 128 - paddleheight)
  paddle2y = mid(0, paddle2y, 128 - paddleheight)
end

function _draw()
  -- clear the screen
  cls()

  -- draw paddles
  rectfill(0, paddle1y, paddlewidth, paddle1y + paddleheight, 7)
  rectfill(128 - paddlewidth, paddle2y, 128, paddle2y + paddleheight, 7)

  -- draw ball
  rectfill(ballx, bally, ballx + ballsize, bally + ballsize, 7)

  -- draw scores
  print("score: " .. player1score, 10, 5, 7)
  print("score: " .. player2score, 88, 5, 7)
end

-- function to reset the ball position
function resetball()
  ballx = 64
  bally = 64
  balldx = ballspeed
  balldy = ballspeed
end
